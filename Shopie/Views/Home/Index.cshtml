
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listnewProduct = (List<Model.EF.Product>)ViewBag.NewProducts;
    var listPopularProduct = (List<Model.EF.Product>)ViewBag.PopularProducts;
}


<!--banner-->
<div class="banner">
    <div class="container">
        <div class="banner-text">
            <div class="col-sm-5 banner-left wow fadeInLeft animated" data-wow-delay=".5s">
                <h2>On Entire Fashion range</h2>
                <h3>Coming Soon </h3>
                <h4>Our New Designs</h4>
                <div class="count main-row">
                    <ul id="example">
                        <li><span class="hours">00</span><p class="hours_text">Hours</p></li>
                        <li><span class="minutes">00</span><p class="minutes_text">Minutes</p></li>
                        <li><span class="seconds">00</span><p class="seconds_text">Seconds</p></li>
                    </ul>
                    <div class="clearfix"> </div>
                    <script type="text/javascript" src="/Assets/client/js/jquery.countdown.min.js"></script>
                    <script type="text/javascript">
								$('#example').countdown({
									date: '12/24/2020 15:59:59',
									offset: -8,
									day: 'Day',
									days: 'Days'
								}, function () {
									alert('Done!');
								});
                    </script>
                </div>

            </div>
            <div class="col-sm-7 banner-right wow fadeInRight animated" data-wow-delay=".5s">
                <section class="slider grid">
                    <div class="flexslider">
                        <ul class="slides">
                            <li>
                                <h4>-30%</h4>
                                <img src="/Assets/client/images/b1.png" alt="">
                            </li>
                            <li>
                                <h4>-25%</h4>
                                <img src="/Assets/client/images/b2.png" alt="">
                            </li>
                            <li>
                                <h4>-32%</h4>
                                <img src="/Assets/client/images/b3.png" alt="">
                            </li>
                        </ul>
                    </div>
                </section>
                <!--FlexSlider-->
                <script defer src="/Assets/client/js/jquery.flexslider.js"></script>
                <script type="text/javascript">
						$(window).load(function(){
						  $('.flexslider').flexslider({
							animation: "pagination",
							start: function(slider){
							  $('body').removeClass('loading');
							}
						  });
						});
                </script>
                <!--End-slider-script-->
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<!--//banner-->
<!--new-->
<div class="container">
    <div class="title-info wow fadeInUp animated animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInUp;">
        <h3 class="title">Sản phẩm mới</h3>
    </div>
    <div class="new-info">
        <div class="col-md-3 new-grid simpleCart_shelfItem wow flipInY animated animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: flipInY;">
            @foreach (var item in listnewProduct)
            {
                var url = "/chi-tiet/" + item.Metatitle + "-" + item.ID;
                <div class="new-top">
                    <a href="@url"><img src="@item.Image" class="img-responsive" alt="@item.Name" /></a>
                    <div class="new-text">
                        <ul>
                            <li><a class="item_add" href="">Thêm vào giỏ hàng</a></li>
                            <li><a href="@url">Show Details </a></li>
                        </ul>
                    </div>
                </div>
                <div class="new-bottom">
                    <h5><a class="name" href="@url">@item.Name</a></h5>

                    <div class="ofr">
                        <p><span class="item_price">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")</span></p>
                    </div>
                </div>
            }
        </div>
       
        <div class="clearfix"> </div>
    </div>
</div>


<!--//new-->
