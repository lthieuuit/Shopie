@model Shopie.Models.RegisterModel

@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Register", "User", FormMethod.Post))
{
    <!--breadcrumbs-->
    <div class="breadcrumbs">
        <div class="container">
            <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
                <li><a href="index.html"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
                <li class="active">Register</li>
            </ol>
        </div>
    </div>
    <!--//breadcrumbs-->
    <!--login-->
    <div class="login-page">
        <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
            <h3 class="title">Register<span> Form</span></h3>
            <p>Hãy đăng ký làm thành viên của chúng tôi </p>
        </div>
        <hr />
        <div class="widget-shadow">
            <div class="login-top wow fadeInUp animated" data-wow-delay=".7s">
                <h4>Already have an account ?<a href="Login">  Sign In »</a> </h4>
            </div>
            <div class="login-body">
                <form class="wow fadeInUp animated" data-wow-delay=".7s">

                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert success text-success">@ViewBag.Success</div>
                    }

                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(model => model.UserName, new { placeholder = "Tên đăng nhập*", @class = "form-input" })

                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    @Html.PasswordFor(model => model.Password, new { placeholder = "Mật khẩu*", @class = "form-input" })

                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    @Html.PasswordFor(model => model.ConfirmPassword, new { placeholder = "Xác nhận mật khẩu*", @class = "form-input" })

                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(model => model.Name, new { placeholder = "Họ tên*", @class = "form-input" })

                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(model => model.Address, new { placeholder = "Địa chỉ", @class = "form-input" })

                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(model => model.Email, new { placeholder = "Email*", @class = "form-input" })

                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(model => model.Phone, new { placeholder = "Số điện thoại*", @class = "form-input" })


                    <input type="submit" name="Đăng ký" value="Đăng ký" />

                </form>
            </div>
        </div>
        <hr />
    </div>
    <!--//login-->
}


