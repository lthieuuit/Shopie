@model List<Shopie.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow fadeInUp" data-wow-delay=".5s">
            <li><a href="/home"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home </a></li>
            <li class="active">Cart</li>
        </ol>
    </div>
</div>
@if (Model.Count > 0)
{
<div class="new">
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Mã sản phẩm</th>
                    <th>Tên sản phẩm</th>
                    <th>Hình ảnh</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Product.ID</td>
                    <td>@item.Product.Name</td>
                    <td><img src="@item.Product.Image" width="100" /></td>
                    <td class="quantity">
                        <input min="1" type="number" value="@item.Quantity" class="item_quantity">
                    </td>                   
                    <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                    <td>@((item.Product.Price.GetValueOrDefault(0) * item.Product.Quantity.GetValueOrDefault(0)).ToString("N0"))</td>
                </tr>
                }
            </tbody>
        </table>
        <div class="btn_form header-right">
            <a href="/cart" class="add-cart item_add">Tiến hành thanh toán</a>
        </div>
    </div>
  
</div>
}
else
{
    <div class="products">

        <div class="container">
            <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
                <span class="title">Chưa có sản phẩm nào trong giỏ hàng ☹</span>

            </div>
        </div>
    </div>
}

